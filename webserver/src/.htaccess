DirectoryIndex pages/index.html index.php

RewriteEngine On 

# Route favicon requests to assets
RewriteRule ^favicon\.ico$ assets/favicon.ico [L]

# If the file or directory exists in root, serve it 
RewriteCond %{REQUEST_FILENAME} -f [OR] 
RewriteCond %{REQUEST_FILENAME} -d 
RewriteRule ^ - [L] 

# If the file exists in pages directory, serve it
RewriteCond %{DOCUMENT_ROOT}/pages%{REQUEST_URI} -f
RewriteRule ^(.*)$ pages/$1 [L]

# Otherwise route everything to index.php 
RewriteRule ^ index.php [L]
